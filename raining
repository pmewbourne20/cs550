x = input("What's the weather? ")

if (x == "Raining"):
	print("Bring an umbrella!")
elif ( x == "Hurricaining"):
	print("Run for your life, you damn fool!")
elif ( x == "Sunny"):
	print("Enjoy it while it lasts")
elif ( x == "Raining cats and dogs"):
	print("RIP to all those animals")
elif (x == "Hailing"):
	print("Zoo-wee-mama!")
else:
	print("Sorry, that's not a recognized form of weather. Please make it simple, in gerund form, and capitalize it.")


